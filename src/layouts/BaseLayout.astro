  <meta name="author" content="Nuclear Blast Simulator">

  <meta name="google-site-verification" content="M5rXsNworpSxOqmAn4-hM5dkayYb7z6F9g9Nf-Qf-qU" />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
